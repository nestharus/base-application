# Vultr API Configuration
# Get your API key from: https://my.vultr.com/settings/#settingsapi
export VULTR_API_KEY="your-vultr-api-key-here"

# Vultr Object Storage Configuration for Terraform State
# Create object storage at: https://my.vultr.com/objectstorage/
# These credentials are from your Vultr Object Storage instance
export AWS_ACCESS_KEY_ID="your-vultr-s3-access-key"
export AWS_SECRET_ACCESS_KEY="your-vultr-s3-secret-key"

# Optional: Set specific Vultr region
# export TF_VAR_region="ewr"